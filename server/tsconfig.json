{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "outDir": "./build",
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    // "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "Node"
    ],
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "**/*.ts",
    "**/*.js"
  ]
}